<odoo>
    <data>
        <menuitem id="open_academy_menu" name="Open Academy" sequence="5" />
        <!-- <menuitem id="session_menu" name="Sessions"  sequence="5" /> -->

        <!-- Menu entiry for displaying courses -->
        <record model="ir.actions.act_window" id="open_academy_list_courses">
            <field name="name">Courses</field>
            <field name="res_model">open_academy.course</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="course_lists" name="Display Courses" sequence="10"
            action="open_academy_list_courses" parent="open_academy_menu" />

        <!-- Menu entry for creating courses-->
        <record model="ir.actions.act_window" id="open_academy_create_course">
            <field name="name">Create Course</field>
            <field name="res_model">open_academy.course</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
            <field name="context">{'form_view_inital_mode': 'edit'}</field>
        </record>
        <menuitem id="course_create" name="Create Course" parent="open_academy_menu" sequence="11"
            action="open_academy_create_course" />


        <!-- Custom Tree View for Course Model -->
        <record model="ir.ui.view" id="open_academy_course_view_tree">
            <field name="name">Open Academy Tree View</field>
            <field name="model">open_academy.course</field>
            <field name="arch" type="xml">
                <tree string="Course List">
                    <field name="title" />
                    <field name="description" />
                </tree>
            </field>
        </record>

        <!-- Custom Form View for Course Model -->
        <record model="ir.ui.view" id="open_academy_course_view_form">
            <field name="name">Open Academy Form View</field>
            <field name="model">open_academy.course</field>
            <field name="arch" type="xml">
                <form string="Course Form">
                    <sheet>
                        <group>
                            <field name="title" />
                            <field name="responsible_user"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" />
                            </page>
                            <page string="Sessions">
                                <field name="session_ids" context="{'form_view_initial_mode': 'edit'}">
                                    <tree editable="bottom">
                                        <field name="name" />
                                        <field name="start_date" />
                                        <field name="duration" />
                                        <field name="seats" />
                                    </tree>
                                </field>

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Custom Search View for Course Model -->
        <record model="ir.ui.view" id="open_academy_course_view_search">
            <field name="name">Open Academy Search View</field>
            <field name="model">open_academy.course</field>
            <field name="arch" type="xml">
                <search string="Search Courses">
                    <field name="title" string="Course Title" />
                    <field name="description" string="Course Description" />
                </search>
            </field>
        </record>

        <!-- Menu entiry for displaying sessions -->
        <record model="ir.actions.act_window" id="open_academy_list_sessions">
            <field name="name">Sessions</field>
            <field name="res_model">open_academy.session</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="session_list" name="All Sessions" sequence="11"
            action="open_academy_list_sessions" parent="open_academy_menu" />

        <!-- Custom Tree View for Session Model -->
        <record model="ir.ui.view" id="open_academy_session_view_tree">
            <field name="name">Open Academy Session Tree View</field>
            <field name="model">open_academy.session</field>
            <field name="arch" type="xml">
                <tree string="Session List">
                    <field name="name" />
                    <field name="start_date" />
                    <field name="duration"/>
                    <field name="seats"/>
                    <field name="instructor" />
                    <field name="course_id"/>
                </tree>
            </field>
        </record>

        <!-- Attendees View for Session Model -->
        <!-- <record model="ir.ui.view" id="open_academy_session_view_tree">
            <field name="name">Open Academy Session Tree View</field>
            <field name="model">open_academy.session</field>
            <field name="arch" type="xml">
                <tree string="Session List">
                    <field name="name" />
                    <field name="start_date" />
                    <field name="duration" />
                    <field name="seats" />
                    <field name="course_id" />
                </tree>
            </field>
        </record> -->


    </data>
</odoo>